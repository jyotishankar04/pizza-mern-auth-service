{
   "name": "auth-service",
   "version": "1.0.0",
   "main": "src/server.ts",
   "scripts": {
      "format:fix": "npx prettier . --write",
      "format:check": "npx prettier . --check",
      "lint:fix": "npx eslint . --fix",
      "lint:check": "npx eslint .",
      "prepare": "husky",
      "dev": "cross-env NODE_ENV=dev nodemon",
      "build": "tsc",
      "start": "ts-node src/index.ts",
      "test": "jest",
      "db:start": "docker run --rm --name pizzadb -p 5432:5432 -e POSTGRES_USER=postgres -e POSTGRES_PASSWORD=postgres -v pgdata:/var/lib/postgresql/data  -d postgres",
      "docker:dev:build": " docker build -t auth-service:dev -f docker/dev/Dockerfile .",
      "docker:dev:run": "docker run --rm -it -v ${PWD}:/usr/src/app -v /usr/src/app/node_modules --env-file ${PWD}/.env -p 5000:5000 -e NODE_ENV=dev -e CHOKIDAR_USEPOLLING=true auth-service:dev",
      "typeorm": "typeorm-ts-node-commonjs"
   },
   "author": "",
   "license": "ISC",
   "description": "",
   "devDependencies": {
      "@eslint/js": "^9.32.0",
      "@types/express": "^5.0.3",
      "@types/jest": "^30.0.0",
      "@types/node": "^24.1.0",
      "@types/supertest": "^6.0.3",
      "cross-env": "^10.0.0",
      "eslint": "^9.32.0",
      "husky": "^9.1.7",
      "jest": "^30.0.5",
      "nodemon": "^3.1.10",
      "prettier": "3.6.2",
      "ts-jest": "^29.4.0",
      "ts-node": "^10.9.2",
      "typescript": "^5.8.3",
      "typescript-eslint": "^8.38.0"
   },
   "dependencies": {
      "dotenv": "^17.2.1",
      "express": "^5.1.0",
      "http-errors": "^2.0.0",
      "pg": "^8.14.1",
      "reflect-metadata": "^0.2.2",
      "supertest": "^7.1.4",
      "typeorm": "0.3.25",
      "winston": "^3.17.0"
   }
}
