{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "lib": ["ES6"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["dist", "node_modules", "eslint.config.mjs"]
}
